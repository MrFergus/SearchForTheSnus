int riddle()
{

	cout << "When you add I get smaller" << endl << "When you remove I get bigger" << endl << "What am I?" << endl;

	cin >> riddleinput;
	
	getline(cin, riddleinput);

	if (riddleinput == "A negative number" || riddleinput == "negative number" || riddleinput == "a negative number" || riddleinput == "A negative" || riddleinput == "Negative number" || riddleinput == "A Negative number") riddleanswer = true;


	else riddleanswer = false;




	if (riddleanswer) cout << "You are correct, I admit defeat." << endl;

	else cout << "Not even close, the answer is A negative number doofus" << endl;


	system("Pause");
	return 0;
}
