int rockPaperSiccors() {

	int R = 1;
	int P = 2;
	int S = 3;
	int i;
	int Pscore = 0;
	int Cscore = 0;
	int choice;
	srand(time(NULL));
	cout << "Rock=1 , Paper= 2, and Scissors= 3\n";

	for (i = 0; i<5; i++) {
		cout << "Enter your choice:";
		cin >> choice;
		int computer = rand() % 3 + 1;
		if (choice == 1) {
			if (computer == 1) {
				cout << "Draw\n";
			}
			if (computer == 2) {
				cout << "Computer Wins!\n";
				Cscore = Cscore + 1;
			}
			if (computer == 3) {
				cout << "Player Wins\n";
				Pscore = Pscore + 1;
			}
		}
		else  if (choice == 2) {
			if (computer == 2) {
				cout << "Draw\n";
			}
			if (computer == 3) {
				cout << "Player Wins!\n";
				Pscore = Pscore + 1;
			}
			if (computer == 1) {
				cout << "Computer Wins!\n";
				Cscore = Cscore + 1;
			}
		}
		else if (choice == 3) {
			if (computer == 3) {
				cout << "Draw\n";
			}
			if (computer == 2) {
				cout << "Computer Wins!\n";
				Cscore = Cscore + 1;
			}
			if (computer == 1) {
				cout << "Player Wins!\n";
				Pscore = Pscore + 1;

			}
		}
		else {
			cout << "Wrong Answer\n";
		}

	}
	if (Cscore > Pscore) {
		cout << "Computer wins" << Cscore << " to " << Pscore << endl;
	}
	else if (Cscore < Pscore) {
		cout << "Player wins " << Pscore << " to " << Cscore << endl;
	}
	else if (Cscore = Pscore) {
		cout << "No winner it is a draw!\n";
	}

	system("pause");
	return 0;
}

int grabben()
{

	cout << "What is the real name of the famous Grabben?" << endl;
	getline(cin, name);
	if (name == "viktor rehn")
	{

		cout << "Well, congrats. You're not completely retarded, like Grabben." << endl;

		correct = correct + 1;


	}

	else if (name != "viktor rehn")
	{

		cout << "You're worse than Grabben, you should feel bad about yourself." << endl;
	}

	system("pause");
	system("cls");

	cout << "Is Grabben perfect and beautiful?" << endl;
	cout << "Yes or no" << endl;
	cin >> choice;

	if (choice == "yes")
	{
		cout << "Seriously? Have you seen him?" << endl;
	}

	else if (choice == "no")
	{
		cout << "At least it seems your taste is to be trusted." << endl;

		correct = correct + 1;
	}

	else
	{
		cout << "That isn't even an option" << endl;


	}

	system("pause");
	system("cls");

	cout << "Is Grabben circumsized or does he just have a micro penis?" << endl;
	cin >> egenskaper;
	getline(cin, egenskaper);

	if (egenskaper == "micro penis""circumsized")
	{
		cout << "Hah, that was actually a trick question!! HE GOT BOTH, HE HAS A CIRCUMSIZED MICRO PENIS!" << endl;
		cout << "I'll give you a point for that one though, not a lot of people actually knows that as no one wants to have sex with him." << endl;

		correct = correct + 1;
	}
	else if (egenskaper == "a circumsized micro penis")
	{
		cout << "Well you're a fucking genius" << endl;
		correct = correct + 1;
	}

	else
	{
		cout << "That's not even an option, cunt." << endl;

	}
	cout << "Give me a moment to check your results" << endl;

	system("pause");
	system("cls");

	if (correct > 1)
	{
		cout << "You're amazing btw!" << endl;
	}

	else if (correct <= 1)
