int rockPaperSiccors();
{
	int R = 1;
	int P = 2;
	int S = 3;
	int i;
	int Pscore = 0;
	int Cscore = 0;
	int choice;
	srand(time(NULL));
	cout << "Rock=1 , Paper= 2, and Scissors= 3\n";


	for (i = 0; i < 5; i++) {
		cout << "Enter your choice:";
		cin >> choice;
		int computer = rand() % 3 + 1;
		if (choice == 1) {
			if (computer == 1) {
				cout << "Draw\n";
			}
			if (computer == 2) {
				cout << "Computer Wins!\n";
				Cscore = Cscore + 1;
			}
			if (computer == 3) {
				cout << "Player Wins\n";
				Pscore = Pscore + 1;
			}
		}
		else  if (choice == 2) {
			if (computer == 2) {
				cout << "Draw\n";
			}
			if (computer == 3) {
				cout << "Player Wins!\n";
				Pscore = Pscore + 1;
			}
			if (computer == 1) {
				cout << "Computer Wins!\n";
				Cscore = Cscore + 1;
			}
		}
		else if (choice == 3) {
			if (computer == 3) {
				cout << "Draw\n";
			}
			if (computer == 2) {
				cout << "Computer Wins!\n";
				Cscore = Cscore + 1;
			}
			if (computer == 1) {
				cout << "Player Wins!\n";
				Pscore = Pscore + 1;


			}
		}
		else {
			cout << "Wrong Answer\n";
		}


	}
	if (Cscore > Pscore) {
		cout << "Computer wins" << Cscore << " to " << Pscore << endl;
	}
	else if (Cscore < Pscore) {
		cout << "Player wins " << Pscore << " to " << Cscore << endl;
	}
	else if (Cscore = Pscore) {
		cout << "No winner it is a draw!\n";


		system("pause");
		return 0;
	}
}
